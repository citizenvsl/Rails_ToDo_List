<div class="container">
        <div class="row">
            <div class="col-md-6 ">
                <h1>To Do</h1>
                <table class="to-do">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th>State</th>
                            <th colspan="4"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render @to_do %>
                    </tbody>
                </table><br>
                <h1>Doing</h1>
                <table class="doing">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th>State</th>
                            <th colspan="4"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render @doing %>
                    </tbody>
                </table><br>
                <h1>Done</h1>
                <table class="done">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th>State</th>
                            <th colspan="4"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render @done %>
                    </tbody><br>
                </table><%= link_to 'New Task', new_task_path %>
            </div>
            <div class="col-md-6 text-center">
                <h1>Weather in your city </h1>
                <% if @user.city %>
                <h1>- <%= @user.city.capitalize %> -</h1>
                    <br>
                     <% @days.each_with_index do |day,index| %>
                    <p><%= day %> => <i class="wi wi-day-<%= @weather[index].downcase %>"></i>
                    </p>
                     <% end %>
                <% else %>
                    <%= link_to "Update City", edit_user_registration_path %>
                <% end %>
                    
            </div>
        </div>
    </div>