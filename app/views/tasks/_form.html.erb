<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.radio_button :state, 'to do', :checked => true %> 
     <%= label :State, 'to do' %>
     <%= f.radio_button :state, 'doing', :checked => true %> 
     <%= label :State, 'Doing' %>
     <%= f.radio_button :state, 'done', :checked => true %> 
     <%= label :State, 'Done' %>
  	</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
